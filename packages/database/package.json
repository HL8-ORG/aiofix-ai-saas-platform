{
  "name": "@aiofix/database",
  "version": "1.0.0",
  "description": "Aiofix数据库模块 - 提供统一的数据库管理功能",
  "main": "dist/database/src/index.js",
  "types": "dist/database/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "test": "jest --config ../../jest.config.js",
    "test:watch": "jest --config ../../jest.config.js --watch",
    "test:coverage": "jest --config ../../jest.config.js --coverage",
    "test:debug": "jest --config ../../jest.config.js --detectOpenHandles --forceExit",
    "test:ci": "jest --config ../../jest.config.js --ci --coverage --watchAll=false",
    "test:unit": "jest --config ../../jest.config.js --testPathPattern=spec",
    "test:integration": "jest --config ../../jest.config.js --testPathPattern=integration",
    "test:verbose": "jest --config ../../jest.config.js --verbose",
    "test:silent": "jest --config ../../jest.config.js --silent",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "database",
    "mikroorm",
    "postgresql",
    "mongodb",
    "nest",
    "typescript"
  ],
  "author": "AI开发团队",
  "license": "MIT",
  "dependencies": {
    "@aiofix/logging": "workspace:*",
    "@mikro-orm/core": "^6.5.1",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/testing": "^11.1.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "tslib": "^2.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.1",
    "@types/pg": "^8.11.0",
    "jest": "^30.1.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "typescript": "~5.9.2"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
