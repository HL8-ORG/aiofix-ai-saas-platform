{
  "name": "@aiofix/auth",
  "version": "1.0.0",
  "description": "认证授权模块 - 支持用户身份验证、授权和会话管理",
  "main": "dist/auth/src/index.js",
  "types": "dist/auth/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --config ../../jest.config.js",
    "test:watch": "jest --config ../../jest.config.js --watch",
    "test:coverage": "jest --config ../../jest.config.js --coverage",
    "test:debug": "jest --config ../../jest.config.js --runInBand --detectOpenHandles",
    "test:ci": "jest --config ../../jest.config.js --ci --coverage --watchAll=false",
    "test:unit": "jest --config ../../jest.config.js --testPathPattern=unit",
    "test:integration": "jest --config ../../jest.config.js --testPathPattern=integration",
    "test:verbose": "jest --config ../../jest.config.js --verbose",
    "test:silent": "jest --config ../../jest.config.js --silent",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@aiofix/core": "workspace:*",
    "@aiofix/department": "workspace:*",
    "@aiofix/organization": "workspace:*",
    "@aiofix/permission": "workspace:*",
    "@aiofix/role": "workspace:*",
    "@aiofix/shared": "workspace:*",
    "@aiofix/tenant": "workspace:*",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/uuid": "^10.0.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "typescript": "~5.9.2"
  },
  "keywords": [
    "authentication",
    "authorization",
    "jwt",
    "session",
    "security",
    "multi-tenant",
    "ddd",
    "cqrs",
    "event-sourcing"
  ],
  "author": "AI开发团队",
  "license": "MIT"
}
