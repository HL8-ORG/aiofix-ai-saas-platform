{
  "name": "@aiofix/tenant",
  "version": "1.0.0",
  "description": "租户管理模块，提供完整的租户管理功能",
  "main": "dist/tenant/src/index.js",
  "types": "dist/tenant/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest --config ../../jest.config.js",
    "test:watch": "jest --config ../../jest.config.js --watch",
    "test:coverage": "jest --config ../../jest.config.js --coverage",
    "test:debug": "jest --config ../../jest.config.js --runInBand --detectOpenHandles",
    "test:ci": "jest --config ../../jest.config.js --ci --coverage --watchAll=false",
    "test:unit": "jest --config ../../jest.config.js --testPathPattern=unit",
    "test:integration": "jest --config ../../jest.config.js --testPathPattern=integration",
    "test:verbose": "jest --config ../../jest.config.js --verbose",
    "test:silent": "jest --config ../../jest.config.js --silent",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist"
  },
  "keywords": [
    "tenant",
    "multi-tenant",
    "saas",
    "domain-driven-design",
    "event-sourcing",
    "cqrs"
  ],
  "author": "Aiofix Team",
  "license": "MIT",
  "dependencies": {
    "@aiofix/core": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "~9.35.0",
    "jest": "^30.1.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "typescript": "~5.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "restricted"
  }
}
