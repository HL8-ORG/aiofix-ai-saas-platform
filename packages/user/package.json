{
  "name": "@aiofix/user",
  "version": "1.0.0",
  "description": "用户管理模块 - 基于DDD和事件溯源的用户聚合根",
  "main": "dist/user/src/index.js",
  "types": "dist/user/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "test": "jest --config ../../jest.config.js",
    "test:debug": "jest --config ../../jest.config.js --runInBand --detectOpenHandles",
    "test:ci": "jest --config ../../jest.config.js --ci --coverage --watchAll=false",
    "test:unit": "jest --config ../../jest.config.js --testPathPattern=unit",
    "test:integration": "jest --config ../../jest.config.js --testPathPattern=integration",
    "test:verbose": "jest --config ../../jest.config.js --verbose",
    "test:silent": "jest --config ../../jest.config.js --silent",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@aiofix/common": "workspace:*",
    "@aiofix/core": "workspace:*",
    "@aiofix/shared": "workspace:*",
    "@mikro-orm/core": "^6.5.2",
    "@mikro-orm/nestjs": "^6.1.1",
    "@mikro-orm/postgresql": "^6.5.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/swagger": "^11.2.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "rxjs": "^7.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.18.1",
    "@types/uuid": "^10.0.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "typescript": "~5.9.2"
  },
  "keywords": [
    "user",
    "domain",
    "ddd",
    "event-sourcing",
    "cqrs",
    "nestjs"
  ],
  "author": "AI开发团队",
  "license": "MIT"
}
